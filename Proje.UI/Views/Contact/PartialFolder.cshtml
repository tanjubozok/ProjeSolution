
<div class="col-md-3">
    <a href="/message/create" class="btn btn-primary btn-block mb-3">Yeni Mesaj</a>

    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Klasörler</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="card-body p-0">
            <ul class="nav nav-pills flex-column">
                <li class="nav-item active">
                    <a href="/contact/index" class="nav-link">
                        <i class="fas fa-envelope-open-text"></i>
                        İletişim
                        <span class="badge bg-primary float-right">
                            @ViewBag.ContactCount                            
                        </span>
                    </a>
                </li>
                <li class="nav-item active">
                    <a href="/message/inbox" class="nav-link">
                        <i class="fas fa-inbox"></i>
                        Gelen Mesajlar
                        <span class="badge bg-primary float-right">
                            @ViewBag.InboxCount
                        </span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/message/sendbox" class="nav-link">
                        <i class="far fa-envelope"></i>
                        Gönderilen Mesajlar
                        <span class="badge bg-primary float-right">
                            @ViewBag.SendboxCount
                        </span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/message/IsDrafted" class="nav-link">
                        <i class="far fa-file-alt"></i>
                        Taslaklar
                        <span class="badge bg-primary float-right">
                            @ViewBag.DraftedCount
                        </span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="fas fa-filter"></i>
                        Spam
                        <span class="badge bg-primary float-right">0</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/message/IsDeleted" class="nav-link">
                        <i class="far fa-trash-alt"></i>
                        Çöp Kutusu
                        <span class="badge bg-primary float-right">
                            @ViewBag.DeletedCount
                        </span>
                    </a>
                </li>
            </ul>
        </div>
    </div>
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Diğer</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="card-body p-0">
            <ul class="nav nav-pills flex-column">
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="far fa-circle text-danger"></i>
                        Önemli Mesajlar
                        <span class="badge bg-danger float-right">0</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="far fa-circle text-warning"></i>
                        Tanıtımlar
                        <span class="badge bg-warning float-right">0</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="far fa-circle text-primary"></i>
                        Sosyal
                        <span class="badge bg-primary float-right">0</span>
                    </a>
                </li>
            </ul>
        </div>
    </div>
</div>