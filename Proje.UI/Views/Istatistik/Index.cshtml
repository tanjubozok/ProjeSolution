
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">İstatistikler</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item active">İstatistikler</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <div class="content">
        <div class="container-fluid">
            <div class="row">

                <div class="col-lg-12">
                    <div class="card card-primary card-outline">

                        <div class="card-body">

                            <div class="row">
                                <div class="col-lg-3 col-6">
                                    <div class="small-box bg-info">
                                        <div class="inner">
                                            <h3>@ViewBag.CategoryCount</h3>

                                            <p>Toplam Kategori Sayısı</p>
                                        </div>
                                        <div class="icon">
                                            <i class="fas fa-chart-area"></i>
                                        </div>

                                    </div>
                                </div>
                                <div class="col-lg-3 col-6">
                                    <div class="small-box bg-success">
                                        <div class="inner">
                                            <h3>@ViewBag.HeadingCount</h3>

                                            <p>Başlık tablosunda "yazılım" kategorisine ait başlık sayısı</p>
                                        </div>
                                        <div class="icon">
                                            <i class="fas fa-chart-bar"></i>
                                        </div>

                                    </div>
                                </div>
                                <div class="col-lg-3 col-6">
                                    <div class="small-box bg-warning">
                                        <div class="inner">
                                            <h3>@ViewBag.WriterCount</h3>

                                            <p>Yazar adında 'a' harfi geçen yazar sayısı</p>
                                        </div>
                                        <div class="icon">
                                            <i class="fas fa-chart-line"></i>
                                        </div>

                                    </div>
                                </div>
                                <div class="col-lg-3 col-6">
                                    <div class="small-box bg-danger">
                                        <div class="inner">
                                            <h3>@ViewBag.MaxCategory</h3>

                                            <p>En fazla başlığa sahip kategori adı</p>
                                        </div>
                                        <div class="icon">
                                            <i class="fas fa-chart-pie"></i>
                                        </div>

                                    </div>
                                </div>

                                <div class="col-lg-3 col-6">
                                    <div class="small-box bg-primary">
                                        <div class="inner">
                                            <h3>@ViewBag.StatusCount</h3>

                                            <p>Kategori tablosunda durumu true olan kategoriler ile false olan kategoriler arasındaki sayısal fark</p>
                                        </div>
                                        <div class="icon">
                                            <i class="fas fa-chart-area"></i>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
