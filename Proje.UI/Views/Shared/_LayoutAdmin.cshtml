                            <a href="/about/list" class="nav-link">
                                <i class="nav-icon fas fa-user-check"></i>
                                <p>
                                    Hakkımızda
                                    <span class="right badge badge-danger">New</span>
                                </p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a href="/Contact/index" class="nav-link">
                                <i class="nav-icon fas fa-pager"></i>
                                <p>
                                    Mesajlar
                                    <span class="right badge badge-danger">New</span>
                                </p>
                            </a>
