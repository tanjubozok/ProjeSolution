@using Proje.Entity.Concrete
@model About

<div class="modal fade" id="modal-default" data-backdrop="static" style="display: none;" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Hakkımızda</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true" style="color:red;">X</span>
                </button>
            </div>
            @using (Html.BeginForm("add", "About", FormMethod.Post))
            {
                <div class="modal-body">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Detay1</label>
                        <input type="text" class="form-control" name="DetailFirst" placeholder="detay bir">
                        @Html.ValidationMessageFor(x => x.DetailFirst, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Detay2</label>
                        <input type="text" class="form-control" name="DetailSecond" placeholder="detay iki">
                        @Html.ValidationMessageFor(x => x.DetailSecond, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Resim1</label>
                        <input type="text" class="form-control" name="ImageFirst" placeholder="resim bir">
                        @Html.ValidationMessageFor(x => x.ImageFirst, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Resim2</label>
                        <input type="text" class="form-control" name="ImageSecond" placeholder="resim iki">
                        @Html.ValidationMessageFor(x => x.ImageSecond, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="modal-footer justify-content-between">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">
                        <i class="fas fa-arrow-left"></i>
                        Listeye Geri Dön
                    </button>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save"></i>
                        Kaydet
                    </button>
                </div>
            }
        </div>
    </div>
</div>
