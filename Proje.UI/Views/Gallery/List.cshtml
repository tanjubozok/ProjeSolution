@using Proje.Entity.Concrete
@model List<Image>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.Title = "Galeri";
}

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Galeri</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/Istatistik/Index">Anasayfa</a></li>
                        <li class="breadcrumb-item active">Galeri</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card card-primary card-outline">
                        <div class="card-header">
                            <h4 class="card-title">Galeri</h4>
                        </div>
                        <div class="card-body">
                            <div class="row">

                                @foreach (var item in Model)
                                {
                                    <div class="col-sm-2">
                                        <a href="@item.Path" data-toggle="lightbox" data-title="@item.Name" data-gallery="gallery">
                                            <img src="@item.Path" class="img-fluid mb-2" alt="@item.Name">
                                        </a>
                                    </div>
                                }

                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>


