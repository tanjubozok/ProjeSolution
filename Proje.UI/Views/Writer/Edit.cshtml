@using Proje.Entity.Concrete
@model Writer

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.Title = "Yazar Güncelle";
}

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Yazar Güncelle</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/Istatistik/Index">Anasayfa</a></li>
                        <li class="breadcrumb-item"><a href="/writer/list">Yazarlar</a></li>
                        <li class="breadcrumb-item active">Yazar Güncelle</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <div class="content">
        <div class="container-fluid">
            <div class="row">

                <div class="col-lg-12">
                    <div class="card card-primary card-outline">
                        @using (Html.BeginForm())
                        {
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Yazarın Adı</label>
                                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = "yazarım adı" })
                                    @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputPassword1">Yazarın Soyadı</label>
                                    @Html.TextBoxFor(x => x.Surname, new { @class = "form-control", placeholder = "yazarım soyadı" })
                                    @Html.ValidationMessageFor(x => x.Surname, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputPassword1">Yazarın E-posta Adresi</label>
                                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "yazarım e-posta adresi" })
                                    @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputPassword1">Yazarın Şifresi</label>
                                    @Html.TextBoxFor(x => x.Password, new { @class = "form-control", placeholder = "yazarım şifresi" })
                                    @Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputPassword1">Yazarın Resimi</label>
                                    @Html.TextBoxFor(x => x.Image, new { @class = "form-control", placeholder = "yazarım resimi" })
                                    @Html.ValidationMessageFor(x => x.Image, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputPassword1">Yazarın Ünvanı</label>
                                    @Html.TextBoxFor(x => x.Title, new { @class = "form-control", placeholder = "yazarım ünvanı" })
                                    @Html.ValidationMessageFor(x => x.Title, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputPassword1">Yazarın Hakkında</label>
                                    @Html.TextBoxFor(x => x.About, new { @class = "form-control", placeholder = "yazarım hakkında" })
                                    @Html.ValidationMessageFor(x => x.About, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="card-footer">
                                <a href="/Writer/list" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left"></i>
                                    Listeye Geri Dön
                                </a>
                                <button type="submit" class="btn btn-success float-right">
                                    <i class="fas fa-save"></i>
                                    Kaydet
                                </button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>